{
  "name": "ts-nuxt",
  "version": "1.0.0",
  "description": "My fabulous Nuxt.js project",
  "author": "tMinami",
  "private": true,
  "scripts": {
    "dev": "nuxt-ts",
    "build": "nuxt-ts build",
    "start": "nuxt-ts start",
    "generate": "nuxt-ts generate",
    "test": "jest",
    "lint": "eslint --ext .js,.vue,.ts --ignore-path .eslintignore .",
    "lintfix": "eslint --fix --ext .js,.vue,.tx --ignore-path .eslintignore ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --ext .js --fix --ignore-path .eslintignore .",
      "git add"
    ],
    "*.vue": [
      "eslint --ext .vue --fix --ignore-path .eslintignore .",
      "git add"
    ],
    "*.ts": [
      "eslint --ext .ts --fix --ignore-path .eslintignore .",
      "git add"
    ]
  },
  "dependencies": {
    "@nuxt/typescript-runtime": "^0.1.3",
    "@nuxtjs/bulma": "^1.2.1",
    "nuxt": "^2.0.0",
    "nuxt-property-decorator": "^2.3.0"
  },
  "devDependencies": {
    "@nuxt/typescript-build": "^0.1.11",
    "@nuxtjs/eslint-config-typescript": "^0.1.2",
    "@types/jest": "^24.0.18",
    "@vue/test-utils": "^1.0.0-beta.27",
    "babel-jest": "^24.1.0",
    "eslint": "^6.2.2",
    "husky": "^3.0.4",
    "jest": "^24.1.0",
    "lint-staged": "^9.2.3",
    "vue-jest": "^4.0.0-0",
    "vuex-module-decorators": "^0.10.1"
  }
}
